{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "tsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks",
    "@typescript-eslint"
  ],
  "rules": {
    "global-require": 0,
    "import/no-unresolved": 0,
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "object-curly-newline": 0,
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [
          ".tsx",
          ".ts"
        ]
      }
    ],
    "quotes": [
      2,
      "double"
    ],
    "semi":"off",
    "no-shadow": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-noninteractive-element-interactions": 0,
    "react/state-in-constructor": 0,
    "no-param-reassign": 0,
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1
      }
    ],
    "no-tabs": 0,
    "react/prop-types": 0,
    "react/jsx-indent": ["warn", 2],
    "react/jsx-indent-props": ["warn", 2],
    "comma-dangle": [
      2,
      "never"
    ],
    "linebreak-style": 0,
    "import/prefer-default-export": 0,
    "import/no-default-export": 2,
    "arrow-parens": 0,
    "eol-last": 0,
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1,
    "react/jsx-props-no-spreading": 0,
    "jsx-a11y/label-has-for": 0,
    "no-console": 0,
    "no-debugger": "error",
    "import/no-cycle": 0,
    "no-bitwise": 0,
    "template-curly-spacing": 0,
    "curly": [
      2,
      "all"
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error" 
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx"
      ]
    },
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ],
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      },
      "typescript": {
        "alwaysTryTypes": true,
        "paths": "./tsconfig.json"
      }
    }
  }
}
